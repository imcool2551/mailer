<div class="container">
    <div class="block">
        <table class="table">
            <thead>
                <tr>
                    <th>수업</th>
                    <th>이메일</th>
                </tr>
            </thead>
            <tbody>
                {{#each classes}}
                <form action="#" method="POST">
                    <tr>
                        <td>
                            <input type="text" name="name" class="input" value="{{dataValues.name}}">
                        </td>
                        <td>
                            <input type="email" name="email" class="input" value="{{dataValues.email}}">
                        </td>
                        <td>
                            <input type="submit" formaction="/edit/{{dataValues.id}}/?_method=PUT" class="input button is-warning" value="수정">
                        </td>
                        <td>
                            <input type="submit" formaction="/edit/{{dataValues.id}}/?_method=DELETE" class="input button is-danger" value="삭제">
                        </td>
                    </tr>
                </form>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>